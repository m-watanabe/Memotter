<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp" />

            <gradient android:angle="90" android:endColor="#ff1e14be" android:startColor="#ff1e14be" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <solid android:color="#ffffffff" />

            <stroke android:width="7dp" android:color="#ffbebebe" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="4dp" />

            <gradient android:angle="90" android:endColor="#ff1e14be" android:startColor="#ff1e14be" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <solid android:color="#ffffffff" />

            <stroke android:width="7dp" android:color="#ffbebebe" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="4dp" />

            <gradient android:angle="90" android:endColor="#ffffffff" android:startColor="#ffffffff" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <solid android:color="#ffffffff" />

            <stroke android:width="7dp" android:color="#ffbebebe" />
        </shape>
    </item>
</selector>